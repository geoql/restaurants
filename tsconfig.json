{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@types/node",
      "@types/mapbox-gl",
      "@types/mapbox__mapbox-gl-draw",
      "@nuxtjs/axios",
      "@nuxtjs/apollo",
      "@nuxt/types",
      "vue-apollo",
      "graphql-tag"
    ]
  },
  "include": [
    // JavaScript
    "components/**/*.js",
    "plugins/**/*.js",
    "nuxt.config.js",
    // Vue
    "components/**/*.vue",
    "pages/**/*.vue",
    "layouts/**/*.vue",
    // TypeScript
    "@types/modules/**/*.d.ts",
    "components/**/*.ts",
    "config/**/*.ts",
    "gql/**/*.ts",
    "plugins/**/*.ts",
    "nuxt.config.ts",
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist",
    "static",
    "test"
  ]
}
